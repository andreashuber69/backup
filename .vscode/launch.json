{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "runtimeArgs": [ "--nolazy", "-r", "ts-node/register" ],
      "args": [ "${workspaceFolder}/src/App.ts" ],
      "protocol": "inspector",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests",
      "runtimeArgs": [ "${workspaceRoot}/node_modules/mocha/bin/mocha" ],
      "args": [ "--require", "ts-node/register", "--inspect-brk", "${workspaceFolder}/src/**/*.spec.ts" ],
      "console": "integratedTerminal"
    }
  ]
}
