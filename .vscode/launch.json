{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "runtimeExecutable": "npm",
      "runtimeArgs": [ "run", "debug-start" ],
      "port": 9229,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests2",
      "runtimeExecutable": "npm",
      "runtimeArgs": [ "run", "debug-test" ],
      "port": 9229,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests",
      "runtimeExecutable": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "runtimeArgs": [ "--require", "ts-node/register", "${workspaceFolder}/src/**/*.spec.ts" ],
      "console": "integratedTerminal"
    }
  ]
}
