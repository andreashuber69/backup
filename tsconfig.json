{
  "compilerOptions": {
    // Compilation options
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "es2015" ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,
    // Generation options
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist/",
    "sourceMap": true,
    "target": "es5"
  }
}