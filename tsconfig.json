{
    "compilerOptions": {
        // Generation options
        "lib": [ "es2015", "dom" ],
        "module": "commonjs",
        "outDir": "dist/",
        "sourceMap": true,
        "target": "es5",
        // Code checking options
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strict": true
    }
}